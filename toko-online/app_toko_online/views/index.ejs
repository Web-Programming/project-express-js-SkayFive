<% layout('layout') %>
<div class="container mt-5 ">
  <h1 class="text-center"><% title %></h1>
  <div class="row">
  <% if (products.length > 0 ) { %>
    <% products.forEach(function(product){ %>
      <div class="col-md-4 mb-4">
        <div class="card" >
          <img src="/images/<%= product.image %>" class="card-img-top mt-3" alt="<%= product.name %>">
            <div class="card-body">
              <h4 class="card-title"><%= product.name %></h4>
                <p class="card-text"><%=product.description %></p>
              <p class="card-text fw-bold">Rp <%= product.price.toLocaleString('id-ID') %></p>
            <a href="/product/<%= product.id %>" class="btn btn-secondary mt-auto">Beli</a>
          </div>
        </div>
      </div>
    <% }); %>
      <% } else { %>
        <p>Maaf Produk Tidak Ditemukan</p>
    <% } %>
  </div>  
</div>
